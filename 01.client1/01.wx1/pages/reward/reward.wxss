/* pages/reward/reward.wxss */
.reward-view{
  margin: 20rpx;
  background: #F6F6F6;
}
.reward-view-head{
  height: 180rpx;
  background-image:url(https://clond-imgs-1300076652.cos.ap-chengdu.myqcloud.com/half_circle.png );
  background-size: 100% 100%;
  position: relative;
}
.reward-user-name{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -30rpx;
}
.reward-user-name>image{
  width: 100%;
  height: 100%;
  border-radius: 50rpx;
}
.reward-list-box{
  width: 100%;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center; /*水平居中*/
}
.reward-list-box>.reward-list{
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 0rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.reward-amount{
  width: 200rpx;
  padding: 10rpx;
  box-sizing: border-box;
  font-size:40rpx;
  color: red;
  border: 1rpx solid red;
  border-radius: 50rpx;
  text-align: center;
}
.customize-price{
  width: 100%;
  margin: 50rpx 0rpx;
  text-align: center;
  color: #505979;
}
