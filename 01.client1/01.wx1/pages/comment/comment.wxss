/* pages/comment/comment.wxss */
.comment-view{
  padding: 0rpx 20rpx;
}
.comment-view-head{
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #cccccc;
}
.comment-content-imput{
  width: 100%;
  color: #cccccc;
}
.input-style{
  width: 100%;
}
.commentText{
  width: 100%;
  margin-top: 200rpx;
  height: 150rpx;
  display: flex;
  flex-direction: row;
}
.commentUser{
width: 20%;
height: 100%;
}
.userPostMessege{
  width: 80%;
  height: 100%;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}
.connectUserContent{
  width: 80%;
  height: 60%;
  overflow: hidden;
}
.connectUser{
  color: black;
}
.addOtherComment{
  width: 100%;
  height: 80rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-top:1rpx solid #cccccc;
  border-bottom:1rpx solid #cccccc;
}
.addCommentImage{
  width: 200rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.addCommentImage>image{
  width: 50rpx;
  height: 50rpx;
  
}