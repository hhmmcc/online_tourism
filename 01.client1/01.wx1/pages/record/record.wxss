/* pages/record/record.wxss */
.recordView{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #F2F2F2;
}
.recordView .title{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background: white;
  border-bottom: 1rpx solid #E5E5E5;
}
.title .titleItem{
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
  justify-content: space-between;
  align-items: center;
}
.titleItem .titleItemBox{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 65rpx;
}
.titleItem .nomalName{
  color: #727272;
  font-size: 34rpx;
}
.titleItem .line{
  width:38rpx;
  height: 5rpx;
  background: yellow;
}
.titleItem .selectName{
  color: yellow;
   font-size: 34rpx;
}
.recordView .viewContent{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content{
  width: 710rpx;
  height: 640rpx;
  margin-top: 20rpx;
  background-image: url("https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1567599801444&di=80e4e5272f987613606c50ffae3256cb&imgtype=0&src=http%3A%2F%2Fimg2.3lian.com%2F2014%2Ff3%2F76%2Fd%2F115.jpg");
  background-size: 160%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.recordView .content .contentItem{
  padding: 40rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
  color: white;
}
.contentItem .circle{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.contentItem .circleSite{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: black;
  opacity: 0.6;
  margin-right: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.contentItem .circleSite .icon{
  width: 50rpx;
  height: 50rpx;
}
.footprintContent{
  width: 710rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.recordView .text{
  margin-top: 100rpx;
  padding: 10rpx 30rpx;
  background: #FDD400;
  font-size:30rpx;
  border-radius: 50rpx;
  margin-bottom: 80rpx;
}
.rankingContentImg{
  width: 100%;
}
ul,li{
  list-style: none;
}

 .contentBox{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #E7E7E7;
  background: white;
  font-size: 30rpx;
  color: #444444;
}
.contentBox .number{
  margin: 0 20rpx;
  color: #FFBF41;
  font-weight:700;
  font-size: 40rpx;
}
.contentBox .amount{
  margin-right: 20rpx;
}
.contentBox .leftBox{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.leftBox .personImg{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}