/* pages/record/record.wxss */
.recordView{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #F2F2F2;
}
.recordView .title{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background: white;
  border-bottom: 1rpx solid #E5E5E5;
}
.title .titleItem{
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
  justify-content: space-between;
  align-items: center;
}
.titleItem .titleItemBox{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 65rpx;
}
.titleItem .nomalName{
  color: #727272;
  font-size: 34rpx;
}
.titleItem .line{
  width:38rpx;
  height: 5rpx;
  background: yellow;
}
.titleItem .selectName{
  color: yellow;
   font-size: 34rpx;
}
/* 打卡内容层叠样式 */
.recordView .viewContent{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content{
  width: 710rpx;
  height: 640rpx;
  margin-top: 20rpx;
  background-size: 162%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.viewContent .backgrandImg{
 z-index: 1;
 /* width: 710rpx; */
  display: block;
  /* height: 640rpx; */
float: left;
  top:400rpx; 
}
.backgrandImg .text{
  width: 100rpx;
  height: 100rpx;
  float: left;
  z-index: 10;
  color: red;
  background: black;
}

.recordView .content .contentItem{
  padding: 40rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
  color: white;
}
.contentItem .circle{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.contentItem .circleSite{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: black;
  opacity: 0.6;
  margin-right: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.content .iconBox{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.contentItem .circleSite .icon{
  width: 50rpx;
  height: 50rpx;
  z-index: 888;
}
.recordView .text{
  margin-top: 100rpx;
  padding: 10rpx 30rpx;
  background: #FDD400;
  font-size:30rpx;
  border-radius: 50rpx;
  margin-bottom: 80rpx;
}
/* 足迹内容层叠样式 */
.footprintContent{
  width: 710rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

/* 排名内容层叠样式 */
.rankingContentImg{
  width: 100%;
}
.rankingContentImg image{
  width: 100%;
}
ul,li{
  list-style: none;
}

 .contentBox{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #E7E7E7;
  background: white;
  font-size: 30rpx;
  color: #444444;
}
.contentBox .number{
  margin: 0 20rpx;
  color: #FFBF41;
  font-weight:700;
  font-size: 40rpx;
}
.contentBox .amount{
  margin-right: 20rpx;
}
.contentBox .leftBox{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.leftBox .personImg{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}